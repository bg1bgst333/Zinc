<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_text_title_text" />

        <EditText
            android:id="@+id/edit_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_text_title_text"
            android:width="170dp"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_text_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_text_url_text" />

        <EditText
            android:id="@+id/edit_text_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_text_url_text"
            android:width="200dp"
            android:inputType="text" />

    </LinearLayout>

</LinearLayout>